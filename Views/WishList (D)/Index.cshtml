@model IEnumerable<Travely.Models.TblWishList>

@{
    ViewData["Title"] = "My Wishlist";
}

<h1>My Wishlist</h1>

@if (!Model.Any())
{
    <p>Your wishlist is currently empty. Start by adding some hotels!</p>
    <a asp-controller="Hotels" asp-action="Index" class="btn btn-primary">Browse Hotels</a>
}
else
{
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-3">
                <div class="card">
                    @* <img src="@item.Hotel.ImageUrl" class="card-img-top" alt="@item.Hotel.Name"> *@
                    <div class="card-body">
                        <h5 class="card-title">@item.Hotel.Name</h5>
                        <p class="card-text text-muted">@item.Hotel.Location</p>
                        <p class="card-text">Added on: @item.AddedDate.ToShortDateString()</p>

                        <div class="d-flex justify-content-between align-items-center">
                            <a asp-controller="Hotels" asp-action="Details" asp-route-id="@item.HotelId" class="btn btn-sm btn-outline-primary">View Details</a>

                            <form asp-action="Remove" method="post">
                                <input type="hidden" name="id" value="@item.WishlistId" />
                                <button type="submit" class="btn btn-sm btn-outline-danger">Remove</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}