<header class="hotels-header">
    <div>
        <h2 class="hotels-title h3 mb-1">Explore Rooms</h2>
        <p class="hotels-subtitle">Browse cozy spaces and find your perfect stay</p>
    </div>
</header>
<div style="display:flex; justify-content:center; align-items:center;">
    @if (User.IsInRole("admin"))
    {
        <p><a asp-action="Create" class="ColorBtn mt-5">Create New Room</a></p>
    }
</div>

<main class="main">

    <section id="rooms-2" class="rooms-2 section">
        <div class="container" data-aos="fade-up" data-aos-delay="100">
            <div class="rooms-grid" data-aos="fade-up" data-aos-delay="300">
                <div class="row g-4">

                    @foreach (var item in Model)
                    {
                        <div class="col-xl-4 col-lg-6">
                            <div class="room-card">
                                <div class="room-image">

                                    @{
                                        string imageUrl = "/images/placeholder.png";
                                        if (item.TblRoomImages != null && item.TblRoomImages.Any())
                                        {
                                            imageUrl = item.TblRoomImages.First().ImageUrl;
                                        }
                                    }
                                    <img src="@imageUrl" alt="@item.RoomType" class="img-fluid">
                                    <div class="room-features">
                                    </div>
                                </div>
                                <div class="room-content mb-0">
                                    <div class="room-header">
                                        <h3>@Html.DisplayFor(modelItem => item.RoomType)</h3>
                                    </div>
                                    <p class="room-description ">@Html.DisplayFor(modelItem => item.Description)</p>
                                    <div class="room-amenities">
                                        <span><i class="bi bi-people"></i> @Html.DisplayFor(modelItem => item.MaxGuests) </span>
                                        <span><i class="bi bi-wifi"></i> Free WiFi</span>
                                        <span><i class="bi bi-tv"></i> Smart TV</span>
                                    </div>
                                    <div class="room-footer">
                                        <div class="room-price">
                                            <span class="price-from">From</span>
                                            <span class="price-amount">@Html.DisplayFor(modelItem => item.Price)</span>
                                            <span class="price-period">/ night</span>
                                        </div>
                                        <a asp-action="Details" asp-route-id="@item.RoomId" class="ColorBtn" title="Details">View Details</a>
                                    </div>
                                </div>
                                <div style="display: flex; justify-content:center; align-items:center; margin:0;">
                                    @if (User.IsInRole("admin") || User.IsInRole("staff"))
                                    {
                                        <a asp-action="Edit" asp-route-id="@item.RoomId" class="BackBtnGray" title="Edit">Edit</a>
                                        <a asp-action="Delete" asp-route-id="@item.RoomId" class="WarningBtnRed" title="Delete">Delete</a>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>
</main>

   <style>
   .room-description {
    display: -webkit-box;
    -webkit-line-clamp: 1; 
    -webkit-box-orient: vertical;
    overflow: hidden;
