    }

    .hotels-header {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 1rem;
        margin-bottom: 5rem;
        margin-top: 2rem
    }

    .hotels-title {
        display: flex;
        justify-content: center;
        align-items: center;
        text-align: center;
        color: var(--heading-color);
        font-weight: 700;
        font-size: 45px;
        letter-spacing: -0.02em;
        margin: 0;
        margin-top:20px;
        color: #393E46;
    }

    .hotels-subtitle {
        color: var(--muted);
        margin: .25rem 0 0 0;
        color: #393E46;
    }
    </style>