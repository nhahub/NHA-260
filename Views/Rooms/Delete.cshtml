@model Travely.Models.TblRoom

@{
    ViewData["Title"] = "Delete";
}

<h1 class="mt-4 m-lg-4 KiroFont1">Delete</h1>
<h3 class="text-danger KiroFont1 m-lg-4">Are you sure you want to delete this room ?</h3>
<div class="m-lg-4">
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Hotel)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Hotel.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RoomNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RoomNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RoomType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RoomType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BedsCount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BedsCount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MaxGuests)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MaxGuests)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Available)
        </dt>
        <dd class="col-sm-10">
            <span class="badge @(Model.Available ? "bg-success" : "bg-danger")">
                @(Model.Available ? "Available" : "Occupied")
            </span>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BreakfastIncluded)
        </dt>
        <dd class="col-sm-10">
            <span class="badge @(Model.BreakfastIncluded ? "bg-success" : "bg-secondary")">
                @(Model.BreakfastIncluded ? "Included" : "Not Included")
            </span>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PetsAllowed)
        </dt>
        <dd class="col-sm-10">
            <span class="badge @(Model.PetsAllowed ? "bg-success" : "bg-secondary")">
                @(Model.PetsAllowed ? "Allowed" : "Not Allowed")
            </span>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="RoomId" />
        <input type="submit" value="Delete" class="dangerbtnkiro" /> |
        <a asp-action="Index" class="BackBtnGray">Back to List</a>
    </form>
</div>