@model IEnumerable<Travely.Models.TblBooking>

@{
    ViewData["Title"] = "My Bookings";
}

<main class="main" style="margin-top: 100px; margin-bottom: 50px;">
    <div class="container">
        <div class="section-header text-center mb-5">
            <h2 class="display-5 fw-bold">My Reservations</h2>
            <p class="lead text-muted">Manage your upcoming and past stays</p>
        </div>

        @if (!Model.Any())
        {
            <div class="text-center py-5">
                <div class="mb-4">
                    <i class="bi bi-calendar-x text-muted" style="font-size: 4rem;"></i>
                </div>
                <h3>No bookings found</h3>
                <p class="text-muted">You haven't made any reservations yet.</p>
                <a asp-controller="Rooms" asp-action="Index" class="btn btn-primary mt-3">Book a Room</a>
            </div>
        }
        else
        {
            <div class="row g-4">
                @foreach (var booking in Model)
                {
                    // تجهيز الصورة
                    string imgUrl = "~/images/rooms/unknown_room.jpg";
                    if (booking.Room.TblRoomImages != null && booking.Room.TblRoomImages.Any())
                    {
                        imgUrl = booking.Room.TblRoomImages.First().ImageUrl;
                    }

                    // تلوين الحالة
                    string statusBadge = "bg-secondary";
                    if (booking.Status == "Confirmed") { statusBadge = "bg-success"; }
                    else if (booking.Status == "Cancelled") { statusBadge = "bg-danger"; }
                    else if (booking.Status == "Pending") { statusBadge = "bg-warning text-dark"; }

                    <div class="col-lg-6">
                        <div class="card shadow-sm border-0 h-100 overflow-hidden">
                            <div class="row g-0 h-100">
                                <div class="col-md-4">
                                    <img src="@Url.Content(imgUrl)" class="img-fluid h-100 w-100" style="object-fit: cover; min-height: 200px;" alt="Room Image">
                                </div>
                                <div class="col-md-8">
                                    <div class="card-body d-flex flex-column h-100">
                                        <div class="d-flex justify-content-between align-items-start mb-2">
                                            <div>
                                                <h5 class="card-title mb-1">@booking.Room.RoomType</h5>
                                                <p class="text-muted small mb-0"><i class="bi bi-geo-alt me-1"></i>@booking.Room.Hotel.Name</p>
                                            </div>
                                            <span class="badge @statusBadge rounded-pill">@booking.Status</span>
                                        </div>

                                        <hr class="my-2 opacity-25">

                                        <div class="row g-2 text-muted small mb-3">
                                            <div class="col-6">
                                                <i class="bi bi-calendar-check me-1"></i> <strong>Check-in:</strong><br>
                                                @booking.CheckIn?.ToString("MMM dd, yyyy")
                                            </div>
                                            <div class="col-6">
                                                <i class="bi bi-calendar-x me-1"></i> <strong>Check-out:</strong><br>
                                                @booking.CheckOut?.ToString("MMM dd, yyyy")
                                            </div>
                                        </div>

                                        <div class="mt-auto d-flex justify-content-between align-items-center">
                                            <h5 class="text-success mb-0">@booking.TotalPrice.ToString("C0") <small class="text-muted fs-6">Total</small></h5>

                                            <div>
                                                @* زرار الدفع لو الحالة لسه Pending *@
                                                @if (booking.Status == "Pending")
                                                {
                                                    <form asp-controller="Payment" asp-action="CreateCheckoutSession" method="post" style="display:inline;">
                                                        <input type="hidden" name="bookingId" value="@booking.BookingId" />
                                                        <button type="submit" class="btn btn-sm btn-success">Pay Now</button>
                                                    </form>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</main>