@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<section id="error-404" class="error-404 section">

    <div class="container" data-aos="fade-up" data-aos-delay="100">

        <div class="text-center">
            <div class="error-icon mb-4" data-aos="zoom-in" data-aos-delay="200">
                <i class="bi bi-exclamation-circle"></i>
            </div>

            <h1 class="error-code mb-4" data-aos="fade-up" data-aos-delay="300">@(Model.StatusCode ?? 500)</h1>
            <h2 class="error-title mb-3" data-aos="fade-up" data-aos-delay="400">@Model.ErrorMessage</h2>


            @if (Model.ShowRequestId)
            {
                <p class="text-muted error-text mb-4" data-aos="fade-up" data-aos-delay="500">
                    <small>Request ID: <code>@Model.RequestId</code></small>
                </p>
            }


            <div class="error-action" data-aos="fade-up" data-aos-delay="700">
                <a href="/" class="btn btn-primary">Back to Home</a>
            </div>
        </div>

    </div>

</section>