@model Travely.ViewModels.HomeViewModel
@{
    ViewData["Title"] = "Home";
}

<!DOCTYPE html>
<html lang="en">

<head>
</head>

<body class="index-page">

    <main class="main">

        <section id="hotel-hero" class="hotel-hero section">
            <div class="container" data-aos="fade-up" data-aos-delay="100">
                <div class="row gy-4 align-items-center">
                    <div class="col-lg-6" data-aos="fade-right" data-aos-delay="200">
                        <div class="hero-content">
                            <h1>Luxury Redefined in Every Stay</h1>
                            <p class="lead">Experience unparalleled comfort and sophistication at our premium hotel. From elegant suites to world-class amenities, every moment of your stay is crafted to perfection.</p>
                            <div class="hero-features">
                                <div class="feature-item">
                                    <i class="bi bi-wifi"></i>
                                    <span>Complimentary WiFi</span>
                                </div>
                                <div class="feature-item">
                                    <i class="bi bi-car-front"></i>
                                    <span>Valet Parking</span>
                                </div>
                                <div class="feature-item">
                                    <i class="bi bi-cup-hot"></i>
                                    <span>24/7 Room Service</span>
                                </div>
                            </div>
                            <div class="hero-buttons">
                                <a asp-area="" asp-controller="Rooms" asp-action="Index" class="btn btn-primary">Explore our Rooms</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6" data-aos="fade-left" data-aos-delay="300">
                        <div class="hero-images">
                            <div class="main-image">
                                <img src="~/img/hotel/showcase-3.webp" alt="Luxury Hotel" class="img-fluid">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section><section id="about-home" class="about-home section light-background">
            <div class="container" data-aos="fade-up" data-aos-delay="100">
                <div class="row gy-4 align-items-center">
                    <div class="col-lg-6" data-aos="fade-right" data-aos-delay="200">
                        <div class="about-content">
                            <h2>Welcome to Travely</h2>
                            <p class="lead">Where luxury meets tranquility in the heart of nature's paradise.</p>
                            <p>Nestled among rolling hills and pristine landscapes, Travely has been offering exceptional hospitality. Our commitment to excellence and attention to detail creates an unforgettable experience for discerning travelers seeking both comfort and adventure.</p>
                            <div class="about-actions">
                                <a asp-area="" asp-controller="About" asp-action="Index" class="ColorBtn">Our Story</a>
                                <a asp-area="" asp-controller="Rooms" asp-action="Index" class="btn-secondary">View our Rooms</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6" data-aos="fade-left" data-aos-delay="300">
                        <div class="about-images">
                            <div class="main-image">
                                <img src="~/img/hotel/showcase-8.webp" alt="Travely Main View" class="img-fluid">
                            </div>
                            <div class="secondary-image">
                                <img src="~/img/hotel/room-12.webp" alt="Luxury Suite Interior" class="img-fluid">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section><section id="rooms-showcase" class="rooms-showcase section">

            <div class="container section-title" data-aos="fade-up">
                <span class="description-title">Rooms</span>
                <h2>Our Featured Rooms</h2>
                <p>A selection of our finest rooms, available for you right now.</p>
            </div>

            <div class="container" data-aos="fade-up" data-aos-delay="100">

                <div class="row mt-6">

                    @if (Model.FeaturedRooms != null && Model.FeaturedRooms.Any())
                    {
                        @foreach (var room in Model.FeaturedRooms)
                        {
                            // Kiro: Get the first image for the room, or a default
                            string imageUrl = "~/images/rooms/unknown_room.jpg"; // Default
                            if (room.TblRoomImages != null && room.TblRoomImages.Any())
                            {
                                // Kiro: FIXED - Use the path directly from DB
                                imageUrl = room.TblRoomImages.First().ImageUrl;
                            }

                            <div class="col-lg-3 col-sm-6" data-aos="fade-up" data-aos-delay="400">
                                <div class="minimal-room-card">
                                    <div class="room-image">
                                        <img src="@Url.Content(imageUrl)" alt="@room.RoomType" class="img-fluid">
                                        <div class="hover-overlay">
                                            <a asp-controller="Rooms" asp-action="Details" asp-route-id="@room.RoomId" class="view-room">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                        </div>
                                    </div>
                                    <div class="room-summary">
                                        <h5>@room.RoomType</h5>
                                        <div class="price-tag">$@room.Price.ToString("F0")<span>/night</span></div>
                                        <div class="basic-amenities">
                                            <i class="bi bi-wifi"></i>
                                            <i class="bi bi-tv"></i>
                                            <i class="bi bi-telephone"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="col-12 text-center">
                            <p>No featured rooms are available at the moment. Please check back later.</p>
                        </div>
                    }

                </div> <div class="text-center" data-aos="fade-up" data-aos-delay="600">
                    <a asp-controller="Rooms" asp-action="Index" class="explore-all-link">
                        <span>Explore All Accommodations</span>
                        <i class="bi bi-arrow-right"></i>
                    </a>
                </div>

            </div>
        </section><section id="offer-cards" class="offer-cards section">
            <div class="container section-title" data-aos="fade-up">
                <span class="description-title">Hotels</span>
                <h2>Our Featured Hotels</h2>
                <p>Discover our prime locations and book your next stay.</p>
            </div>

            <div class="container" data-aos="fade-up" data-aos-delay="100">
                <div class="row g-4">

                    @if (Model.FeaturedHotels != null && Model.FeaturedHotels.Any())
                    {
                        @foreach (var hotel in Model.FeaturedHotels)
                        {
                            // Kiro: Get the first image for the hotel, or a default
                            string imageUrl = "~/images/hotels/unknown_hotel.jpg"; // Default
                            if (hotel.TblHotelImages != null && hotel.TblHotelImages.Any())
                            {
                                // Kiro: FIXED - Use the path directly from DB
                                imageUrl = hotel.TblHotelImages.First().ImageUrl;
                            }

                            <div class="col-lg-4 col-md-6">
                                <div class="offer-card" data-aos="zoom-in" data-aos-delay="200">
                                    <div class="offer-badge">
                                        <span class="discount">@hotel.Stars <i class="bi bi-star-fill"></i></span>
                                    </div>
                                    <div class="offer-image">
                                        <img src="@Url.Content(imageUrl)" alt="@hotel.Name" class="img-fluid">
                                    </div>
                                    <div class="offer-content">
                                        <h3>@hotel.Name</h3>
                                        <p>Located in: @hotel.Location. @hotel.Address</p>
                                        <div class="offer-details">
                                            <div class="validity">
                                                <i class="bi bi-telephone"></i>
                                                <span>@hotel.Phone</span>
                                            </div>
                                        </div>
                                        <a asp-controller="Hotels" asp-action="Details" asp-route-id="@hotel.HotelId" class="btn-book">View Hotel Details</a>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="col-12 text-center">
                            <p>No featured hotels are available at the moment. Please check back later.</p>
                        </div>
                    }

                </div>
            </div>
        </section><section id="amenities-cards" class="amenities-cards section">
            <div class="container section-title" data-aos="fade-up">
                <span class="description-title">Amenities</span>
                <h2>Amenities</h2>
                <p>Necessitatibus eius consequatur ex aliquid fuga eum quidem sint consectetur velit</p>
            </div><div class="container" data-aos="fade-up" data-aos-delay="100">
                <div class="row g-5">
                    <div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="100">
                        <div class="facility-card">
                            <div class="facility-image">
                                <img src="~/img/hotel/amenities-1.webp" alt="Wireless Internet" class="img-fluid">
                                <div class="facility-overlay">
                                    <i class="bi bi-wifi"></i>
                                </div>
                            </div>
                            <div class="facility-info">
                                <h4>High-Speed Internet</h4>
                                <p>Complimentary wireless internet access throughout the hotel premises with enterprise-grade security and unlimited bandwidth for all your connectivity needs.</p>
                                <div class="facility-features">
                                    <span><i class="bi bi-check-circle"></i> 24/7 Available</span>
                                    <span><i class="bi bi-check-circle"></i> High Speed</span>
                                </div>
                            </div>
                        </div>
                    </div><div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="150">
                        <div class="facility-card">
                            <div class="facility-image">
                                <img src="~/img/hotel/amenities-3.webp" alt="Swimming Pool" class="img-fluid">
                                <div class="facility-overlay">
                                    <i class="bi bi-droplet"></i>
                                </div>
                            </div>
                            <div class="facility-info">
                                <h4>Rooftop Pool</h4>
                                <p>Luxurious rooftop swimming pool with breathtaking city skyline views. Features heated water, poolside service, and premium lounging areas for ultimate relaxation.</p>
                                <div class="facility-features">
                                    <span><i class="bi bi-check-circle"></i> Heated Pool</span>
                                    <span><i class="bi bi-check-circle"></i> City Views</span>
                                </div>
                            </div>
                        </div>
                    </div><div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="200">
                        <div class="facility-card">
                            <div class="facility-image">
                                <img src="~/img/hotel/amenities-5.webp" alt="Valet Parking" class="img-fluid">
                                <div class="facility-overlay">
                                    <i class="bi bi-car-front"></i>
                                </div>
                            </div>
                            <div class="facility-info">
                                <h4>Valet Parking</h4>
                                <p>Premium valet parking service with secure underground facility. Professional attendants ensure your vehicle is safely parked and readily available upon request.</p>
                                <div class="facility-features">
                                    <span><i class="bi bi-check-circle"></i> Secure</span>
                                    <span><i class="bi bi-check-circle"></i> Valet Service</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>

</body>
</html>