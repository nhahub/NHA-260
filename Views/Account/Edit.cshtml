@model Travely.ViewModels.ProfileEditViewModel

@{
    ViewData["Title"] = "Edit Profile";
    Layout = "_Layout";
}

<div class="profile-page-container">

    <aside class="sidebar">
        <div class="user-profile">
            @if (!string.IsNullOrEmpty(Model.CurrentImagePath))
            {
                <img src="@Url.Content(Model.CurrentImagePath)" alt="Profile Picture" class="profile-avatar-image">
            }
            else
            {
                <img src="@Url.Content("~/images/profiles/Unknown_person.jpg")" alt="Profile Picture" class="profile-avatar-image">
            }
        </div>

        <nav class="sidebar-nav">
            <ul>
                <li><a asp-action="Profile" asp-controller="Account"><i class="fas fa-briefcase"></i> My Bookings</a></li>
                <li><a asp-action="Edit" asp-controller="Account" class="active"><i class="fas fa-user"></i> Personal Info</a></li>
                <li><a asp-action="Index" asp-controller="Notifications"><i class="fas fa-heart"></i> Notifications</a></li>
                <li><a asp-action="Wishlist" asp-controller="Account"><i class="fas fa-heart"></i> My Wishlist</a></li>
            </ul>
        </nav>

        <div class="logout-link">
            <form asp-controller="Account" asp-action="Logout" method="post" id="sidebarLogoutForm">
                @Html.AntiForgeryToken()
                <a href="javascript:void(0);"
                   onclick="document.getElementById('sidebarLogoutForm').submit();"
                   class="sidebar-logout-link">
                    <i class="fas fa-sign-out-alt"></i> Log Out
                </a>
            </form>
        </div>

    </aside> <main class="main-content">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">@TempData["SuccessMessage"]</div>
            }

            @Html.ValidationMessageFor(m => m.NewImage, "", new { @class = "alert alert-fail text-danger" })

            <div class="form-group mb-2 mt-0">
                <label asp-for="Fullname" class="control-label"></label>
                <input asp-for="Fullname" class="form-control" />
                <span asp-validation-for="Fullname" class="text-danger"></span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Country" class="control-label"></label>

                <select asp-for="Country"
                        class="country-select"
                        asp-items="@ViewBag.Countries"
                        data-placeholder="Select your country...">
                </select>
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="Age" class="control-label"></label>
                <input asp-for="Age" class="form-control" type="number" />
            </div>

            <div class="form-group mb-2">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
            </div>

            <hr />
            <div class="form-group mb-2">
                <label asp-for="NewImage" class="control-label"></label>
                <p class="mb-1 mt-2">Must be 4MB or smaller</p>
                <input asp-for="NewImage" class="form-control" type="file" accept="image/*" />
                <span asp-validation-for="NewImage" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="ColorBtn">Save Changes</button>
                <a asp-action="Profile" class="BackBtnGray">Cancel</a>
            </div>
        </form>
    </main>
</div>

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<style>
    a {
        text-decoration: none;
    }

    .form-group label {
        display: block;
        margin-bottom: .5rem;
    }

    .select2-container .select2-selection--single {
        height: 36px !important;
        padding: 4px 8px !important;
        border-radius: 8px;
        font-size: 0.9rem;
    }

    .select2-selection__arrow {
        top: 5px !important;
    }

    .select2-container--bootstrap-5 .select2-selection {
        border-color: #ced4da;
    }

    .select2-container--bootstrap-5 .select2-results__options {
        max-height: 250px !important;
        overflow-y: auto !important;
    }

    .select2-dropdown.select2-dropdown--above {
        top: 100% !important;
        bottom: auto !important;
    }
    .logout-link {
        padding: 15px 25px;
        display: block;
        margin-top: 20px;
        border-top: 1px solid #eee;
    }

    .sidebar-logout-link {
        color: #40524d;
        text-decoration: none;
        display: inline-block;
        background: none;
        border: none;
        padding: 0;
        cursor: pointer;
        font-family: inherit;
        font-size: 1rem;
    }

        .sidebar-logout-link:hover {
            color: var(--accent-color, #2f5d50);
        }

        .sidebar-logout-link i {
            margin-right: 8px;
        }
    .profile-avatar-image {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        object-fit: cover;
        margin-bottom: 10px;
        border: 3px solid #eee;
    }

    .user-profile {
        text-align: center;
        padding: 20px;
    }
</style>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>