@model Travely.ViewModels.WishlistPageViewModel
@{
    ViewData["Title"] = "My Wishlist";
    Layout = "_Layout";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />

<div class="profile-page-container">

    <aside class="sidebar">
        <div class="user-profile">
            @if (!string.IsNullOrEmpty(Model.Imagepath))
            {
                <img src="@Url.Content(Model.Imagepath)" alt="Profile Picture" class="profile-avatar-image">
            }
            else
            {
                <img src="@Url.Content("~/images/profiles/Unknown_person.jpg")" alt="Profile Picture" class="profile-avatar-image">
            }
            <span class="user-name">@Model.Fullname</span>
        </div>

        <nav class="sidebar-nav">
            <ul>
                <li><a asp-action="Profile" asp-controller="Account"><i class="fas fa-briefcase"></i> My Bookings</a></li>
                <li><a asp-action="Edit" asp-controller="Account"><i class="fas fa-user"></i> Personal Info</a></li>
                <li><a asp-action="Index" asp-controller="Notifications"><i class="fas fa-heart"></i> Notifications</a></li>
                <li><a asp-action="Wishlist" asp-controller="Account" class="active"><i class="fas fa-heart"></i> My Wishlist</a></li>
            </ul>
        </nav>

        <div class="logout-link">
            <form asp-controller="Account" asp-action="Logout" method="post" id="sidebarLogoutForm">
                @Html.AntiForgeryToken()
                <a href="javascript:void(0);"
                   onclick="document.getElementById('sidebarLogoutForm').submit();"
                   class="sidebar-logout-link">
                    <i class="fas fa-sign-out-alt"></i> Log Out
                </a>
            </form>
        </div>
    </aside>

    <main class="main-content">
        <h1>My Wishlist</h1>

        @if (!Model.WishlistItems.Any())
        {
            <div class="empty-state-card">
                <div class="empty-icon"><i class="fas fa-heart-broken"></i></div>
                <p>Your wishlist is currently empty. Start by adding some hotels!</p>
                <a asp-controller="Hotels" asp-action="Index" class="btn btn-book">Browse Hotels</a>
            </div>
        }
        else
        {
            <div class="row">
                @foreach (var item in Model.WishlistItems)
                {
                    <div class="col-md-4 mb-4">
                        <div class="card h-100 booking-card" style="flex-direction: column;">

                            <img src="@(item.Hotel.TblHotelImages?.FirstOrDefault()?.ImageUrl ?? "/images/default-hotel.png")"
                                 class="card-img-top" alt="@item.Hotel.Name" style="height: 200px; object-fit: cover;">

                            <div class="card-body d-flex flex-column booking-details" style="padding: 20px;">
                                <h5 class="card-title" style="font-size: 1.4rem;">@item.Hotel.Name</h5>
                                <p class="location-date"><i class="fas fa-map-marker-alt"></i> @item.Hotel.Address</p>
                                <p class="card-text small text-muted">Added: @item.AddedDate.ToShortDateString()</p>

                                <div class="mt-auto d-flex justify-content-between align-items-center">
                                    <a asp-controller="Hotels" asp-action="Details" asp-route-id="@item.HotelId" class="btn btn-sm btn-details">View Details</a>

                                    <form asp-controller="Wishlist" asp-action="Remove" method="post" style="margin:0;">
                                        <input type="hidden" name="id" value="@item.WishlistId" />
                                        <button type="submit" class="btn btn-sm btn-outline-danger"><i class="fas fa-trash"></i> Remove</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </main>
</div>

@section Scripts {
    <style>
        /* كود لتظبيط شكل الصورة في الشريط الجانبي */
        .profile-avatar-image {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            object-fit: cover;
            margin-bottom: 10px;
            border: 3px solid #eee;
        }

        .user-profile {
            text-align: center;
            padding: 20px;
        }

        .user-name {
            font-weight: 600;
        }

        /* كود ظبط لينك تسجيل الخروج */
        .logout-link {
            padding: 15px 25px;
            display: block;
            margin-top: 20px;
            border-top: 1px solid #eee; /* خط فاصل خفيف */
        }

        .sidebar-logout-link {
            color: #40524d; /* (اللون الأساسي بتاعك) */
            text-decoration: none;
            display: inline-block;
            background: none;
            border: none;
            padding: 0;
            cursor: pointer;
            font-family: inherit;
            font-size: 1rem;
        }

            .sidebar-logout-link:hover {
                color: var(--accent-color, #2f5d50); /* (لون الـ hover بتاعك) */
            }

            .sidebar-logout-link i {
                margin-right: 8px; /* مسافة جنب الأيقونة */
            }
    </style>
}