@model Travely.Models.TblPayment

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>TblPayment</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">PaymentId</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.PaymentId)</dd>

        <dt class="col-sm-2">Booking</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Booking != null ? model.Booking.BookingReference : "N/A")</dd>

        <dt class="col-sm-2">User</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.User != null ? model.User.Fullname : "N/A")</dd>

        <dt class="col-sm-2">Amount</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Amount)</dd>
    </dl>

    @using (Html.BeginForm("Delete", "TblPayments", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.PaymentId)

        <input type="submit" value="Delete" class="btn btn-danger" />
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary ms-2" })
    }
</div>