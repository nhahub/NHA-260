@model Travely.Models.TblPayment

@{
    ViewData["Title"] = "Confirm Payment";
}

<h1>Confirm Payment</h1>

<div>
    <h4>Payment</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Payment Id</dt>
        <dd class="col-sm-10">@Html.DisplayFor(m => m.PaymentId)</dd>

        <dt class="col-sm-2">Booking</dt>
        <dd class="col-sm-10">@Html.DisplayFor(m => m.Booking != null ? m.Booking.BookingReference : "N/A")</dd>

        <dt class="col-sm-2">User</dt>
        <dd class="col-sm-10">@Html.DisplayFor(m => m.User != null ? m.User.Fullname : "N/A")</dd>

        <dt class="col-sm-2">Amount</dt>
        <dd class="col-sm-10">@Html.DisplayFor(m => m.Amount)</dd>

        <dt class="col-sm-2">Method</dt>
        <dd class="col-sm-10">@Html.DisplayFor(m => m.PaymentMethod)</dd>

        <dt class="col-sm-2">Current Status</dt>
        <dd class="col-sm-10">@Html.DisplayFor(m => m.PaymentStatus)</dd>
    </dl>

    @using (Html.BeginForm("Confirm", "TblPayments", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.PaymentId)

        <input type="submit" value="Confirm Payment" class="btn btn-success" />
        @Html.ActionLink("Cancel", "Details", new { id = Model.PaymentId }, new { @class = "btn btn-secondary ms-2" })
    }
</div>