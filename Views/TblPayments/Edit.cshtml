@model Travely.Models.TblPayment

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

@using (Html.BeginForm("Edit", "TblPayments", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.PaymentId)

    <div class="form-group">
        @Html.LabelFor(m => m.BookingId)
        @Html.DropDownList("BookingId", (SelectList)ViewData["BookingId"], new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.BookingId, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.UserId)
        @Html.DropDownList("UserId", (SelectList)ViewData["UserId"], new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.UserId, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.PaymentMethod)
        @Html.EditorFor(m => m.PaymentMethod, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(m => m.PaymentMethod, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.PaymentStatus)
        @Html.EditorFor(m => m.PaymentStatus, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(m => m.PaymentStatus, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Amount)
        @Html.EditorFor(m => m.Amount, new { htmlAttributes = new { @class = "form-control", step = "0.01" } })
        @Html.ValidationMessageFor(m => m.Amount, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.PaymentDate)
        @Html.EditorFor(m => m.PaymentDate, new { htmlAttributes = new { @class = "form-control", type = "datetime-local" } })
        @Html.ValidationMessageFor(m => m.PaymentDate, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" /> |
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
}